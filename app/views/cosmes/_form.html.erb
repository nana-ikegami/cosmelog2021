<%= form_with model: @cosme, local: true do |f|%>
    <div class="field">
      <%= f.label :title, "タイトル" %><br />
      <%= f.text_field :title, id:"cosme_title", class:"cosme_title"%>
    </div> 
    
    <div class="field">
      <%= f.label :text, "紹介文など記入してください" %><br />
      <%= f.text_area :text, class: :form__text, id:"cosme_text", class:"cosme_text" %>
    </div>

    <div class="field">
      <%= f.label :image, "画像" %><br />
      <%= f.file_field :image, id:"cosme_image", class:"cosme_image"%>
    </div>

    <div class="actions">
      <%= f.submit "コスメを投稿", class:"form__btn" %>
    </div>
<% end %>