<div class="container">
  <%= form_with model: @prototype, local: true do |f|%>
  
      <h2>投稿する</h2>
      <%= f.label :title, "title" %><br />
      <%= f.text_field :title, id:"cosme_title", class:"cosme_title"%>

    <div class="field">
      <%= f.label :text, "text" %><br />
      <%= f.text_area :text, class: :form__text, id:"cosme_text", class:"cosme_text" %>
    </div>

    <div class="field">
      <%= f.label :image, "画像" %><br />
      <%= f.file_field :image, id:"cosme_image", class:"cosme_image"%>
    </div>

    <div class="actions">
      <%= f.submit "投稿する", class: :form__btn  %>
    </div>
  <% end %>
</div>